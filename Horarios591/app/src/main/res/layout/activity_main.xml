<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.horarios591.MainActivity">

    <Button
        android:id="@+id/aluche_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALUCHE"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/escuela_button"
        android:layout_toStartOf="@+id/escuela_button"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

    <Button
        android:id="@+id/escuela_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="87dp"
        android:layout_marginRight="87dp"
        android:text="ESCUELA" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/escuela_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="Elige destino"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
